<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CodeStyleFont">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CodeStyleFont.Bold" parent="CodeStyleFont">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CodeStyleFont.White" parent="CodeStyleFont">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="HSButton">
        <item name="android:textAppearance">@style/CodeStyleFont.White</item>
        <item name="android:background">@drawable/black_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
